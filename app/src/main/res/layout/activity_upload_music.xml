<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".upload_music">

    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_back"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Upload Music"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Next"
                android:paddingRight="10dp"
                android:textColor="#FFE338"
                android:textSize="20dp"
                android:gravity="center_vertical|center_horizontal" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/square"
                android:layout_centerInParent="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/upload_xml"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.35"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            >

            <EditText
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_textfield"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Title"
                android:textStyle="bold"
                android:textColorHint="#FFE338"
                android:paddingLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            >

            <EditText
                android:id="@+id/Genre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_textfield"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Genre"
                android:textStyle="bold"
                android:textColorHint="#FFE338"
                android:paddingLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            >

            <EditText
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_textfield"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Description"
                android:textStyle="bold"
                android:textColorHint="#FFE338"
                android:paddingLeft="10dp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.15"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"

        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="40dp"
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Upload"
            android:textColor="@color/white"
            />
        <View
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Record"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.05"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#222222"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/love"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@color/black"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/listenlater"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.05"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#222222"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liked"
                android:textSize="12dp"
                android:textColor="#ffff"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center_horizontal|center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textSize="12dp"
                android:textColor="#ffff"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="12dp"
                android:textColor="#ffff"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listen Later"
                android:textSize="12dp"
                android:textColor="#ffff"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>